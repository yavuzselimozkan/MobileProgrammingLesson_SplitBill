<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_color"
    android:gravity="center"
    android:padding="24dp">

    <!-- Uygulama Başlığı -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesap Lütfen!"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_marginBottom="40dp"/>

    <!-- Tutar Girişi -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toplam Tutar (TL)"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/inputAmount"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/edit_text_style"
        android:hint="Örn: 500"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_marginBottom="20dp"/>

    <!-- Yan Yana Spinnerlar (Kişi Sayısı ve Bahşiş) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <!-- Kişi Sayısı Seçimi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kişi Sayısı"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>

            <Spinner
                android:id="@+id/spinnerPeople"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_style"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <!-- Bahşiş Oranı Seçimi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahşiş Oranı"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>

            <Spinner
                android:id="@+id/spinnerTip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edit_text_style"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Hesapla Butonu -->
    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="HESAPLA VE BÖL"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#FF3D3D"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="30dp"/>

    <!-- Sonuç Alanı -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_text_style"
        android:padding="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kişi Başı Ödenecek:"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txtResultPerPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 TL"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/txtTotalTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Toplam Bahşiş: 0.00 TL)"
            android:textSize="14sp"
            android:textColor="#2E2E2E"/>
    </LinearLayout>

</LinearLayout>